{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Laravel: serve",
      "type": "shell",
      "command": "php artisan serve",
      "isBackground": true,
      "problemMatcher": {
        "owner": "php",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Laravel development server started"
        }
      },
      "group": "build"
    },
    {
      "label": "Laravel: vite",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "ready in"
        }
      },
      "group": "build"
    }
  ]
}
